<!DOCTYPE html>
<html lang="{{LANGUAGE_LC}}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes">
  <title>{% block title %}{% endblock %} - {{ID_SITE_NAME}}</title>

  {% assets "style" %}
    <link rel="stylesheet" href="{{ ASSET_URL }}">
  {% endassets %}
  <link rel="stylesheet"
        href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700&subset=cyrillic">
  <link rel="shortcut icon" href="{{ ID_FAVICON_URL }}">
  <meta name="robots" content="index, follow">
  <link rel="home" href="{{ url('home') }}">

  {% block head_extra %}
  {% endblock %}
</head>
<body>
  {% include 'includes/nav.jinja' %}

  {% block content %}
  {% endblock %}

  {% include 'includes/footer.jinja' %}
  {% assets "script" %}
    <script type="text/javascript" src="{{ ASSET_URL }}"></script>
  {% endassets %}
  <script type="text/javascript">
    var navLink = document.getElementById('nav-id-spa');
    navLink.addEventListener('click', function (e) {
      e.preventDefault();
      IdFrontend.__container__.lookup('router:main').transitionTo('index');
    });
  </script>
</body>
</html>
