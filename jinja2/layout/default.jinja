{% import "components/forms.jinja" as forms with context %}

<!DOCTYPE html>
<html lang="{{LANGUAGE_LC}}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes"> 
  <title>{% block title %}{% endblock %} - {{ID_SITE_NAME}}</title>

  {% assets "style" %}
    <link rel="stylesheet" href="{{ ASSET_URL }}">
  {% endassets %}
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link rel="shortcut icon" href="{{ ID_FAVICON_URL }}">
  <meta name="robots" content="index, follow">
  <link rel="home" href="{{ url('home') }}">
</head>
<body>
  <div id="page">
    {% include 'includes/nav.jinja' %}

    <div id="content">
      {% block content %}
        {% block header %}
          <div class="id-page-header">
            <h2>
              <i class="fa fa-{% block header_icon %}{% endblock %}" aria-hidden="true"></i>
              {{ self.title() }}
            </h2>
            <div class="clearfix"></div>
          </div>
        {% endblock %}
        <div class="container-fluid">
          <div class="row">
            {% block inner_content %}{% endblock %}
          </div>
        </div>
      {% endblock %}
    </div>
  </div>
  
  {% include 'includes/footer.jinja' %}
  {% assets "script" %}
    <script type="text/javascript" src="{{ ASSET_URL }}"></script>
  {% endassets %}
</body>
</html>
