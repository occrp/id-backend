{% extends "base.jinja" %}
{% block body_class %}splash has-full-page-header{% endblock %}

{% block before_content %}
    <link rel="stylesheet" href="{{ static('css/podaci.css') }}"/>
    <div class="page-header full-page-header">
        <h2 class="primary-highlight">{% trans %}Sign in to Investigative Dashboard{% endtrans %}</h2>
    </div>
{% endblock %}
{% block content %}
    <div class="span12">
        <div class="page-header">
            {% if next %}
            <div class="alert alert-info">{% trans %}You must sign in to continue.{% endtrans %}</div>
            {% endif %}
        </div>

        <div class="material-form-container">
            <div class="material-form md-whiteframe-z1" style="width: 400px; height: 180px; margin: 20px auto;">
                <form action="/accounts/login/" method="POST">
                    {%csrf_token%}
                    {% if next %}<input type="hidden" name="next" value="{{next}}"/>{% endif %}
                    <fieldset>
                        {{form.as_table()}}
                        <label></label>
                        <input class="btn btn-primary" type="submit" value="{% trans %}Sign in{% endtrans %}"/>

                        <div style="float:right;">
                            <a href="/accounts/register/" class="btn">{% trans %}Register{% endtrans %}</a>
                            <a href="/accounts/password/reset/" class="btn">{% trans %}Lost password{% endtrans %}</a>
                        </div>
                    </fieldset>
                </form>
            </div>

            <div class="material-form md-whiteframe-z1" style="width: 400px; height: 180px; margin: 20px auto; text-align: center;">
                <p>{% trans %}If you registered with your Google account, you can use it to sign in. Most users should sign in using the standard method.{% endtrans %}</p>
                <br/><br/>
                <a href="{{ url("socialauth_begin", "google-oauth2") }}" class="btn">
                    <i class="fa fa-google-plus"></i> {% trans %}Sign in with Google{% endtrans %}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
