{% extends "search/base.jinja" %}

{% block search_form %}
    <form id="search_form" class="search form-inline" data-type="document">
        <div class="row">
            <div class="span6">
                <input type="text" placeholder="{% trans %}Enter your terms...{% endtrans %}"
                       name="q" id="q" class="span6"
                       {% if form.query.data %}value="{{ form.query.data }}"{% endif %} />
            </div>
            <div class="span2">
                <button class="btn btn-large btn-primary" id="search_submit"><i class="fa fa-search"></i> {% trans %}Search{% endtrans %}</button>
            </div>
            <div id="searching_notice" class="hide" role="alert">Searching... <i class="fa fa-spinner fa-pulse"></i></div>
        </div>
    </form>
{% endblock %}
