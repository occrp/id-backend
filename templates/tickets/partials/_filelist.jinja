
<div class="attached-files">
  <h3 class="primary-highlight">
    {% trans %}Attached Files{% endtrans %}
  </h3>
  {% if attachments | length %}
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>File name</th>
          <th>Added by</th>
          <th>Added at</th>
          <th>Size</th>
        </tr>
      </thead>
      <tbody>
      {% for attachment in attachments %}
        <tr>
          <td>
            <a href="{{url('ticket_attachment_download', pk=attachment.id)}}">
              {{attachment.filename}}
            </a>
          </td>
          <td>{{attachment.user.display_name}}</td>
          <td>{{macros.display_datetime(attachment.created)}}</td>
          <td>{{attachment.size | filesizeformat}}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <em>{% trans %}There are no files attached to this request.{% endtrans %}</em>
  {% endif %}

  {% if ticket.is_open() and user.has_perm('ticket.change_ticket', ticket) %}
    <div class="row-fluid">
      <form class="upload-form" method="POST" action="{{ url('ticket_attachment_upload') }}"
            enctype="multipart/form-data">
        {{ csrf_input }}
        <div class="row-fluid">
          <div class="span9">
            <label for="file" class="upload-label">
              <i class="fa fa-cloud-upload"></i> Select a file
            </label>
            <input type="file" name="file" id="file" multiple="multiple">
            <input type="hidden" name="ticket" id="ticket" value="{{ticket.id}}">
          </div>
        </div>
      </form>
    </div>
  {% endif %}
</div>
