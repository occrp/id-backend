
<div class="attached-files">
    <h3 class="primary-highlight">
        {% trans %}Attached Files{% endtrans %}
    </h3>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>File name</th>
                <th>Added by</th>
                <th>Added at</th>
                <th>Size</th>
            </tr>
        </thead>
        <tbody>
        {% for attachment in attachments %}
            <tr>
                <td>
                    <a href="{{url('ticket_attachment_download', pk=attachment.id)}}">
                        {{attachment.filename}}
                    </a>
                </td>
                <td>{{attachment.user.display_name}}</td>
                <td>{{macros.display_datetime(attachment.created)}}</td>
                <td>{{attachment.size | filesizeformat}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if ticket.is_open() %}
        <h4>{% trans %}Upload a file{% endtrans %}</h4>
        <div class="row-fluid">
            <form class="comment-form" method="POST" action="" enctype="multipart/form-data">
                {% csrf_token %}
                <!-- {{ticket_update_form.as_p()}}
                <div class="row-fluid">
                    <div class="span9">
                        <button class="btn btn-primary pull-right" type="submit">{% trans %}Comment{% endtrans %}</button>
                    </div>
                </div>
                -->
            </form>
        </div>
    {% endif %}
</div>
