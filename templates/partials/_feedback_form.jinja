{#
    You can add a feedback text to the begining of this form by:
    {% set feedback_text = 'Please consider leaving feedback about Investigative Dashboard, so that we can improve it!' %}
    {% include "partials/_feedback_form.jinja" with context %}
    ...in the template this one is included in.
#}
<form action="/feedback/" class="material-form-container" method="POST">
    <div class="material-form md-whiteframe-z1 feedback-form" style="max-width:550px;">
        {% if feedback_text %}<p class="info">{% trans %}{{feedback_text}}{% endtrans %}</p>{% endif %}
        {% csrf_token %}
        {{form.as_table()}}
    </div>
    <label></label><input type="submit" class="material-form-submit btn primary md-whiteframe-z2" value="{% trans %}Send{% endtrans %}"/>
</form>
