<div class="modal" id="file-modal" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">{% trans %}File:{% endtrans %} <span id="file-modal-filename"></span></h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <form class="form-horizontal">
            <div class="span4">
                <div class="control-group">
                  <label class="control-label" for="title">{% trans %}Title{% endtrans %}</label>
                  <div class="controls">
                    <input type="text" id="file-title" placeholder="Title">
                  </div>
                </div>
                <div class="control-group">
                  <label class="control-label" for="title">{% trans %}File name{% endtrans %}</label>
                  <div class="controls">
                    <input type="text" id="file-name" placeholder="File name"
                        disabled>
                  </div>
                </div>
                <div class="control-group">
                  <label class="control-label" for="title">{% trans %}Uploaded{% endtrans %}</label>
                  <div class="controls">
                    <input type="text" id="file-date" disabled>
                  </div>
                </div>
                <div class="control-group">
                  <label class="control-label" for="file-tags">{% trans %}Tags{% endtrans %}</label>
                  <div class="controls">
                    <select id="file-tags" multiple="true"></select>
                  </div>
                </div>
              </div>
              <div class="span4">
                <div class="control-group">
                  <label class="control-label" for="file-users-read">{% trans %}Readers{% endtrans %}</label>
                  <div class="controls">
                    <select id="file-users-read" multiple="true"></select>
                  </div>
                </div>
                <div class="control-group">
                  <label class="control-label" for="file-users-write">{% trans %}Writers{% endtrans %}</label>
                  <div class="controls">
                    <select id="file-users-write" multiple="true"></select>
                  </div>
                </div>
                <div class="control-group">
                  <label class="control-label" for="staff_read"></label>
                  <div class="controls">
                    <label class="checkbox">
                      <input type="checkbox" id="file-staff-read">
                      {% trans %}All staff can read{% endtrans %}
                    </label>
                  </div>
                </div>
                <div class="control-group">
                  <label class="control-label" for="public_read"></label>
                  <div class="controls">
                    <label class="checkbox">
                      <input type="checkbox" id="file-public-read">
                      {% trans %}Public{% endtrans %}
                    </label>
                  </div>
                </div>
            </div>
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <a class="btn" id="file-download-link">
            <i class="fa fa-download"></i>
            {% trans %}Download{% endtrans %}
        </a>
        <button type="button" class="btn" id="file-save-link">{% trans %}Save{% endtrans %}</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
