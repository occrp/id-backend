<div class="podaci_upload_dropzone">
    <ul class="podaci-files podaci-files-icons"{% if tag %} data-tag="{{tag.id}}"{% endif %}>
    {% for file in result_files %}
        <li class="podaci-file" data-mime="{{file.mimetype}}" data-size="{{file.size}}" data-id="{{file.id}}" data-tags="{{file.tags.all()}}">
            <a href="{{url('podaci_files_details', file.id)}}"><i class="fa fa-file podaci-icon-big"></i>{{file.filename}}</a>
        </li>
    {% endfor %}
    </ul>

    <table class="podaci-files podaci-files-list table table-striped table-hover"{% if tag %} data-tag="{{tag.id}}"{% endif %}>
        <thead>
        <tr>
            <th><input type="checkbox" class="podaci_file_select_all"/></th>
            <th>{% trans %}Filename{% endtrans %}</th>
            <th>{% trans %}Size{% endtrans %}</th>
            <th>{% trans %}Type{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for file in result_files %}
            <tr class="podaci-file" data-mime="{{file.mimetype}}" data-size="{{file.size}}" data-id="{{file.id}}" data-tags="{{file.tags.all()}}">
                <td><input type="checkbox" class="podaci_file_select_box"/></td>
                <td nowrap class="overflow-hidden"><a href="{{url('podaci_files_details', file.id)}}"><i class="fa fa-file"></i>{{file.filename}}</a></td>
                <td nowrap style="text-align: right;">{{file.size|filesizeformat}}</td>
                <td nowrap>{{file.mimetype}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
