{% extends "layout/default.jinja" %}

{% block title %}{% trans %}Sign in to {{ID_SITE_NAME}}{% endtrans %}{% endblock %}
{% block header_icon %}unlock-alt{% endblock %}

{% block inner_content %}
  {% if next %}
    <div class="col-md-12">
      <div class="alert alert-info">
        {% trans %}You must sign in to continue.{% endtrans %}
      </div>
    </div>
  {% endif %}
  <div class="col-md-6">
    <form action="{{ url('login') }}" method="POST" class="form-horizontal">
      <div class="panel panel-default">
        <div class="panel-body">
          {{ csrf_input }}
          {% if next %}<input type="hidden" name="next" value="{{next}}"/>{% endif %}
          {{ forms.render_form_fragment(form) }}
          {{ forms.render_submit(submit_title="Sign in") }}

          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
              <a href="/accounts/password/reset/">{% trans %}Lost password{% endtrans %}</a>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
              <p>
                {% trans %}Don't have an account yet? Please consider registering.{% endtrans %}
              </p>
            </div>
            <div class="col-sm-offset-3 col-sm-9">
              <a href="{{ url('registration_register') }}?next={{next | urlencode}}" class="btn btn-default">
                {% trans %}Register{% endtrans %}
              </a>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">{% trans %}Google Sign-in{% endtrans %}</div>
      <div class="panel-body">
        <p class="info">
          {% trans %}If you registered with your Google account, you can
          use it to sign in. Most users should sign in using the standard
          method.{% endtrans %}
        </p>
        <a href="{{ url("social:begin", "google-oauth2") }}?next={{next | urlencode}}" class="btn btn-default">
          <i class="fa fa-google-plus"></i> {% trans %}Sign in with Google{% endtrans %}
        </a>
      </div>
    </div>
  </div>
{% endblock %}
